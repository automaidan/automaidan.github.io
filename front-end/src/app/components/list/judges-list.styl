.table-directive
    .search-block-wrapper
        position relative
        display flex
        margin 2em 0
        @media screen and (max-width: 800px)
            flex-direction column
            max-width 96%
            margin 0 auto
        input
            padding-left 3.5rem
            padding-right 1em
            box-sizing border-box
            color inputTextColor
            flex 2
            &:focus
                background inputBgColor
                border-bottom 1px solid mainColor
                box-shadow 0px 2px 3px 1px rgba(0, 0, 0, 0.1)
        .icon
            width 2rem
            position absolute
            top 0.8rem
            left 0.8rem
            img
                transition all 0.6s
                width 100%
                filter: grayscale(100%);

@css {
    input:focus + .icon > img {
        filter: none !important;
    }
}

.search-block__select
    display block
    flex 1

.table__wrapper
    background tableBackgroundColor
    @media screen and (min-width: 992px)
        min-width 960px
    @media screen and (max-width: 992px) and (min-width: 768px)
        width 100%
        min-width 768px
        max-width 960px
    @media screen and (max-width: 768px) and (min-width: 480px)
        width 100%
        min-width 480px
        max-width 768px
    table
        width 100%
        min-width 100%
        .region_col
            @media screen and (max-width: 568px)
                display none
        thead
            border-bottom-color borderColor
            tr
                th
                    padding tdPadding
                    cursor pointer
                .flex-container
                    display flex
                .icons
                    margin-left 0.5em
                .up
                    display inine-block
                    color mainColorDarken
                .down
                    display none
                th[data-reversed='true']
                    .up
                        display none
                    .down
                        display inline-block
                        color mainColorDarken

        tbody
            tr
                background transparent
                cursor pointer
                &.ng-enter
                    transition .5s
                    opacity 0
                &.ng-enter-active
                    opacity 1
                td
                    color tableFontColor
                    border-radius 0
                    padding tdPadding
                    @media screen and (max-width: 500px)
                        width 30%
            tr:nth-child(odd)
                background rgba(0, 0, 0, 0.09)
            tr:hover
                background tableBackgroundColorHover
                td
                    color logoColor
                    border-radius 0
    .pagination
        display flex
        flex-direction row-reverse
        background none
        border-top 1px solid black
        .flex-container
            padding 2em
            box-sizing border-box
            width 50%
            background transparent
            display flex
            align-items center
            flex-direction row-reverse
            div
                margin 0.5em
                &.counter
                    display flex
                    span
                        color tableFontColor
                        margin 2px


