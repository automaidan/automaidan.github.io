.footer__wrapper
    text-align center
    margin-bottom 3em
    margin-top 3em
    .free-space-bottom
        padding-bottom 50px
    .footer__text
        color #666969
    .partners_container
        width 60%
        min-width 600px
        margin 0 auto
        display flex
        justify-content center
        align-content center
        .partner
            position relative
            margin 0 2em
            display flex
            flex-direction column
            justify-content center
            flex 1
            &.streched-logo
                flex 2
            .img-wrapper
                position relative
                width 100%
                img
                    width 100%
                    filter invert(65%)

        @media screen and (max-width: 500px)
            width 48%
            .partner
                &.automaidan
                    display flex
                    width 20%

.main
    .footer__wrapper
        .footer__text
            color #FFF
        .partners_container
            .partner
                .img-wrapper
                    img
                        filter: grayscale(100%)
